



<div class="container">
  <div class="row">
    <div class="col-sm-10 col-md-offset-1">

    	

      <% @stories.each do |story| %>
      	<div class="story-box">
          <div class="story-box-vote">		






				      <%= link_to "", vote_story_path(story, direction: :up), class: "glyphicon glyphicon-chevron-up story-box-vote-arrow" %>
					    <%= story.points %>			


				      <%= link_to "", vote_story_path(story, direction: :down), class: "glyphicon glyphicon-chevron-down story-box-vote-arrow" %>








			    </div><!-- .story-box-vote -->

			    <a href="#">
				     <img class="story-box-image" src="<%= story.image %>"/>
			    </a>

          <div class="story-box-details">           
            <h3>
              <a href="<%= story_path(story) %>"><%= story.title %></a>
            </h3>
            <a href="#">Comments</a>

            <strong>Submited:</strong> <%= time_ago_in_words(story.created_at) %> ago
          </div><!-- .story-box-details -->	
        </div><!-- .story-box -->
      <% end %>

    </div><!-- .col-sm-10 -->	
  </div><!-- .row -->
</div><!-- .container -->
