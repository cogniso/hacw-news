<div class="row">
	<div class="col-sm-6 col-md-offset-3">
		<form>
			<LEGEND>Post New Article</LEGEND>
			<fieldset class="bg-info">
				<div class="form-group submit-form">

					<button type="button" class="close" aria-label="Close"><span aria-hidden="true">&times;</span></button>
					<label for="entry_title">Title</label>
					<input type="text" id="entry_title" name="entry_title" class="form-control" placeholder="Write your article title here">
				</div><!-- .form-group -->

				<div class="form-group">	
					<label for="entry_link">Paste your link here</label>
					<input type="link" id="entry_link" name="entry_link" class="form-control" placeholder="Paste/write URL here">

					<label for="user_comment">Comments</label>
					<textarea id="user_comment"></textarea>
				</div><!-- .form-group -->

				<div class="form-group">
					<label for="inputfile">Choose a file to attach <span style="font-size:11px">(Max. Size: 2MB)</span></label>
					<input type="file" id="inputfile">

				</div><!-- .form-group -->

				<input type="checkbox"><a href="#" class="terms-and-conditions"> I agree with terms and condition</a>

				<button type="submit" class="btn btn-success btn-submit-article">Submit article</button>
				<button type="reset" class="btn btn-warning">Reset</button>
			</fieldset>
		</form>
	</div><!--. col-sm-8 -->
</div><!-- .row -->